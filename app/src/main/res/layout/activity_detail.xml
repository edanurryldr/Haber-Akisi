<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:layout_marginBottom="-35dp"
        android:paddingLeft="250dp">

        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="Share"
            android:layout_gravity="center"
            android:background="@drawable/ic_share"
            android:backgroundTint="@color/black"/>
        <ImageView
            android:id="@+id/imagefavorites"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="Fav"
            android:layout_gravity="center"
            android:background="@drawable/ic_favorite"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_Image"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-30dp"
        />
    <TextView
        android:id="@+id/txt_ozet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:text="Haber Özeti"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/imagePerson"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_person"
            android:backgroundTint="@color/black"/>
        <TextView
            android:id="@+id/txt_authorname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/imageCalendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_calendar"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/black"/>
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/1999"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:text="NewsPaperNewsPaperNewsPaperNewsPaperNewsPaperNewsPaperNewsPaperNewsPaperNewsPaperNewsPaper"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/buttonIntent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Haber Kaynağına Git"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom|center"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    </ScrollView>

</LinearLayout>